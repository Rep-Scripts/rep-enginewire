{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src/**/*.ts", // Include TypeScript source files
    "src/**/*.tsx", // Include TypeScript source files
    "public/**/*.d.ts", // Include declaration files
    "src/assets/*.mp4" // Include the path to your video file
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
